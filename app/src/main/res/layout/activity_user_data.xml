<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        tools:context=".UserData.UserDataActivity">

        <ImageView
            android:id="@+id/img_logo_top"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/logo_sehatin"
            android:src="@drawable/logo_sehatin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/lexenddeca"
            android:text="@string/Selamat_datang_Sobat_Sehatin"
            android:textColor="#33A1E0"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/img_logo_top" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lexenddeca"
            android:text="@string/Masukan_Data_Terlebih_dahulu_ya"
            android:textColor="#757575"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/label_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lexenddeca"
            android:text="@string/UserData_Pilih_Gender"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle" />

        <LinearLayout
            android:id="@+id/container_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/label_gender">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_male"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/putih4"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tv_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lexenddeca"
                    android:text="@string/UserData_Lakilaki"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_female"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/putih4"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tv_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lexenddeca"
                    android:text="@string/UserData_Perempuan"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <TextView
            android:id="@+id/label_umur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lexenddeca"
            android:text="@string/Berapa_Umurmu"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_gender" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_umur"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@+id/label_umur">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_umur"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="age"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/lexenddeca"
                    android:hint="@string/Masukkan_Umur"
                    android:inputType="number"
                    android:paddingHorizontal="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:fontFamily="@font/lexenddeca"
                    android:text="@string/Tahun"
                    android:textColor="@color/abuabu2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/label_tinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lexenddeca"
            android:text="@string/Berapa_Tinggimu"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_umur" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_tinggi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/putih4"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@+id/label_tinggi">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_tinggi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="height"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/lexenddeca"
                    android:hint="@string/Masukkan_Tinggi"
                    android:inputType="number"
                    android:paddingHorizontal="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:fontFamily="@font/lexenddeca"
                    android:text="@string/cm"
                    android:textColor="@color/abuabu2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/label_berat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lexenddeca"
            android:text="@string/Berapa_Beratmu"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_tinggi" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_berat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/putih4"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@+id/label_berat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_berat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="weight"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/lexenddeca"
                    android:hint="@string/Masukkan_Berat"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/abuabu3"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:fontFamily="@font/lexenddeca"
                    android:text="@string/kg"
                    android:textColor="@color/abuabu2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kirim"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/warnaUtama"
            android:fontFamily="@font/lexenddeca"
            android:text="@string/Kirim"
            android:textAllCaps="false"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            app:layout_constraintTop_toBottomOf="@+id/card_berat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>