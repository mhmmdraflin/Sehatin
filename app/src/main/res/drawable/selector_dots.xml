            <item android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="12dp" android:height="12dp"/>
                    <solid android:color="@color/warnaUtama"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="10dp" android:height="10dp"/>
                    <solid android:color="#D1D5DB"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>